@model BusBoard.Web.Models.PostcodeSelection
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>BusBoard</h1>
    <p class="lead">For all your bus info needs. Enter a postcode below, as well as the search radius and click enter 
        to see bus times for that location.</p>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("BusInfo", "Home", FormMethod.Get))
        {
            <fieldset>
                <label>Post Code:</label>
                @Html.TextBoxFor(m => m.Postcode)<br>
                <label>Search radius (m):</label>
                @Html.TextBoxFor(m => m.SearchRadius, new {@Value = "200"})<br>

                <input type="submit" value="Get Bus Info"/>
            </fieldset>
        }
    </div>
</div>